---
import Layout from "../layouts/Layout.astro"
import "../styles/sell.css"
---
<Layout>
    <div class="formulario-container">
    <h1>COMPRALO! O DEJALO</h1>
        <main class="form_sell">
            <form class="" action="/">
                <div class="username">
                <div class="label_form">
                    <label class="color1880" for="username">Username</label>
                </div>
                <div>
                    <input name="username" required>
                </div>
            </div>
            <div class="email">
                <div class="label_form">
                    <label class="color1880" for="email">Gmail</label>
                </div>
                <div>
                    <input type="email" name="email" required>
                </div>
            </div>
            <div class="password">
                <div class="label_form">

                    <label class="color1880" for="password">Password</label>
                </div>
                <div>
                    <input type="password" name="password" required>
                </div>
            </div>
            <button>sumit</button>
        </form>
    </main>
    </div>    
</Layout>
